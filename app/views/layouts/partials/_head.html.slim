- title ||= 'GitShowcase'
- site_name ||= 'GitShowcase'
- canonical ||= request.path
- description ||= 'Developer, feature your best projects in a plug and play portfolio. The best part, for free.'
- author = 'Pedro Moreira,Victor Santos'
- image ||= asset_url('/preview.png')
- type ||= 'website'

- card_type ||= 'summary_large_image'
- card_site ||= '@gitshowcase'
- card_creator ||= nil
- card_image ||= image

- keywords ||= 'gitshowcase, git showcase, developer portfolio, github portfolio, online portfolio, portfolio template, free portfolio, open source, developer, showcase, personal website, personal branding, rockstar portfolio, tech portfolio, free template, developer platform'

- tag_manager = true if tag_manager.nil?

title= title

- if tag_manager
  = render 'layouts/partials/head/tag_manager'

= render 'layouts/partials/head/meta', canonical: canonical
= render 'layouts/partials/head/web_app'
= render 'layouts/partials/head/favicon'

= render 'layouts/partials/head/seo',
        description: description,
        keywords: keywords,
        author: author

= render 'layouts/partials/head/social',
        title: title,
        site_name: site_name,
        description: description,
        image: image,
        type: type,
        card_type: card_type,
        card_site: card_site,
        card_creator: card_creator,
        card_image: card_image

/ Main assets
= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

/ Fonts
link href="https://fonts.googleapis.com/css?family=Lato:300,400,700|Montserrat" rel="stylesheet"
